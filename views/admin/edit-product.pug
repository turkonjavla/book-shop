extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/form.css")

block content
  main
    form.product-form(action=`/admin/${editing ? 'edit' : 'add'}-product`, method="POST")
      .form-control
        label(for="title") Title
        input(type="text", name="title", value=`${editing ? product.title : ''}`)#title

        label(for="imageUrl") Image url
        input(type="text", name="imageUrl", value=`${editing ? product.imageUrl : ''}`)#imageUrl

        label(for="price") Price
        input(type="number", step='0.01' name="price", value=`${editing ? product.price : null}`)#price

        label(for="description") Description
        textarea( name="description", rows='5', cols='40')#description #{value=`${editing ? product.title : ''}`}

        if editing
          input(type="hidden", value=product.id, name='productId')


      button(type="submit") #{editing ? 'Update' : 'Add'} product