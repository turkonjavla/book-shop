extends ../layouts/main-layout.pug

block content
  main.centered
    .product__detail
      img.product__detail--image(src=`${product.imageUrl}`, alt=`${product.title}`)

      div
        h1.product__detail--title #{product.title}

        p.product__detail--description #{product.description}
        form(action="/add-to-cart", method='GET')
          button Add to cart
