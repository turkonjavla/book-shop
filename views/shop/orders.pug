extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")
  
block content
  main.centered
    if orders.length <= 0
      h2 No orders yet

    else
    h1 Orders
      each order in orders
        table(style='width:100%', border='1')
              thead
                tr
                  th Item
                  th Quantity
              tbody
                each order in orders
                  each product in order.products
                    tr
                      td #{product.title}
                      td #{product.orderItem.quantity}