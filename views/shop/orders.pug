extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")
  
block content
  main
   main.centered
    if orders.length <= 0
      h2 No orders yet

    else
      each order in orders
        table(style='width:100%', border='1')
              thead
                tr
                  th Item
                  th Quantity
              tbody
                each item in order.items

                    tr
                      td #{item.title}
                      td #{item.quantity}  